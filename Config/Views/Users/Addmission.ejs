<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Addmission || SK DIGI TECH</title>

    <!-- Font Icon -->
    <link
      rel="stylesheet"
      href="fonts/material-icon/css/material-design-iconic-font.min.css"
    />

    <!-- Main css -->
    <link rel="stylesheet" href="/Stylesheets/new.css" />
  </head>
  <body>
    <div class="main">
      <!-- Sign up form -->
      <section class="signup">
        <div class="container">
          <div class="signup-content">
            <div class="signup-form">
              <h2 class="form-title">Addmission</h2>

              <form
                action=""
                method="post"
                class="register-form"
                id="register-form"
                enctype="multipart/form-data"
              >
                <div class="form-group">
                  <label for="name"
                    ><i class="zmdi zmdi-account material-icons-name"></i
                  ></label>
                  <input type="text" name="name" placeholder="Name" required />
                </div>
                <div class="form-group">
                  <label for="fathername"
                    ><i class="zmdi zmdi-email"></i
                  ></label>
                  <input
                    type="text"
                    name="fathername"
                    placeholder="Father Name"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="cnic"><i class="zmdi zmdi-lock"></i></label>
                  <input
                    type="text"
                    name="email"
                    placeholder="Email"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="gender"
                    ><i class="zmdi zmdi-lock-outline"></i
                  ></label>
                  <input type="gender" name="gender" placeholder="Gender" />
                </div>
                <div class="form-group">
                  <label for="password"
                    ><i class="zmdi zmdi-lock-outline"></i
                  ></label>
                  <input type="file" name="image" placeholder="Profile" />
                </div>

                <div class="form-group">
                  <label for="address"
                    ><i class="zmdi zmdi-lock-outline"></i
                  ></label>
                  <input
                    type="text"
                    name="address"
                    placeholder="Address"
                    required
                  />
                </div>
                <div class="form-group form-button">
                  <input
                    type="submit"
                    onclick="return confirmar()"
                    class="form-submit"
                    value="Submit"
                  />
                </div>
              </form>
            </div>
            <div class="signup-image">
              <figure>
                <img src="img/Privacy policy.gif" alt="sing up image" />
              </figure>
              <a href="/home" class="signup-image-link"
                >Back</a
              >
            </div>
          </div>
        </div>
      </section>
    </div>

    <% if(typeof message !== 'undefined'){ %> <%= message %> <% } %>

    <script src="/Javascript/script.js"></script>

    <!-- JS -->

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.2/dist/sweetalert2.all.min.js"></script>

    <script>
      function confirmar() {
        Swal.fire({
          title: 'Application Subbmited, We will send confirmation mail within 3 to 5 working days!',
          icon: 'success',
          showCancelButton: true,
          showCancelButtonColor: '#d33',
          confirmButtonColor: '#3085d6',
          denyButtonText: `ok`,
        }).then((result) => {
          /* Read more about isConfirmed, isDenied below */
          if (result.isConfirmed) {
            Swal.fire("Saved!", "", "success");
          } else if (result.isDenied) {
            Swal.fire("Changes are not saved", "", "info");
          }
        });
      }
    </script>
  </body>
</html>
